{
    "i18n": true,
    "type": "tabs",
    "items": {
        "overview": {
            "type": "panel",
            "label": "overview",
            "items": {
                "_RefreshDevices": {
                    "type": "sendTo",
                    "label": "Refresh Devices",
                    "command": "RefreshDevices",
                    "jsonData": "{}",
                    "showProcess": true,
                    "useNative": true
                },
                "panels": {
                    "type": "table",
                    "label": "panels",
                    "noDelete": true,
                    "items": [
                        {
                            "type": "text",
                            "attr": "id",
                            "label": "Id",                       
                            "readOnly": true
                        },

                        {
                            "type": "text",
                            "attr": "name",
                            "label": "name",                   
                            "readOnly": true
                        },
                        {
                            "type": "text",
                            "attr": "topic",
                            "label": "topic",
                            "readOnly": true
                        },
                        {
                            "type": "checkbox",
                            "attr": "removeIt",
                            "label": "remove device",
                            "width": "20%",
                            "default": false
                        }
                    ]
                }
            }

        },
        "general": {
            "type": "panel",
            "label": "general",
            "items": {
                "mqttIp": {
                    "type": "text",
                    "label": "mqttIp",
                    "newLine": true
                },
                "mqttPort": {
                    "type": "text",
                    "label": "mqttPort",
                    "newLine": false
                },
                "mqttUsername": {
                    "type": "text",
                    "label": "mqttUsername",
                    "newLine": true
                },
                "mqttPassword": {
                    "type": "password",
                    "label": "mqttPassword",
                    "newLine": false
                },
                "_header": {
                    "type": "header",
                    "label": "Not used",
                    "size": 3,
                    "text": "Not used"
                },
                "topic": {
                    "type": "text",
                    "label": "topic",
                    "newLine": true
                },
                "name": {
                    "type": "text",
                    "label": "name",
                    "newLine": false
                },
                "timeout": {
                    "type": "number",
                    "label": "timeout",
                    "newLine": true
                },
                "mediaid": {
                    "type": "text",
                    "label": "mediaid",
                    "newLine": false
                },
                "onlyStartFromSystemConfig": {
                    "type": "checkbox",
                    "label": "onlyStartFromSystemConfig",
                    "default": true,
                    "newLine": true
                },
                "Testconfig2": {
                    "type": "jsonEditor",
                    "label": "Testconfig2"
                },
                "pw1": {
                    "type": "password",
                    "label": "Pin",
                    "newLine": true
                },
                "logUnknownTokens": {
                    "type": "checkbox",
                    "label": "logUnknownTokens",
                    "default": false,
                    "newLine": true
                },
                "doubleClickTime": {
                    "type": "number",
                    "label": "doubleClickTime",
                    "default": 350,
                    "min": 1,
                    "max": 2000,
                    "newLine": true
                }
            }
        },
        "pageQR":{
            "type": "panel",
            "label": "+",
            "items": {
                "pageQRselType":{
                    "type": "select",
                    "label": "QR Typ",
                    "options": [
                        {"label": "none", "value": 0},
                        {"label": "Wifi", "value": 1},
                        {"label": "URL", "value": 2}

                    ]
                },
                "pageQRwlantype":{
                    "type": "text",
                    "label": "Verschl√ºssselung",
                    "hidden": "data.pageQRselType !== 1",
                    "newLine": true
                },
                "pageQRssid":{
                    "type": "text",
                    "label": "SSID",
                    "hidden": "data.pageQRselType !== 1"
                },
                "pageQRpwd":{
                    "type": "password",
                    "label": "Password",
                    "hidden": "data.pageQRselType !== 1"
                },
                "pageQRwlanhidden":{
                    "type": "checkbox",
                    "label": "verstecktes Wlan",
                    "hidden": "data.pageQRselType !== 1",
                    "default": false
                },
                "pageQRurl":{
                    "type": "text",
                    "label": "URL",
                    "default": "https://",
                    "hidden": "data.pageQRselType !== 2",
                    "newLine": true
                }
            }
        }
    }
}