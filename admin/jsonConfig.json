{
    "i18n": true,
    "type": "tabs",
    "items": {      
        "general": {
            "type": "panel",
            "label": "general",
            "items": {
                "mqttServer": {
                    "type": "checkbox",
                    "label": "mqttServer",
                    "default": true,
                    "newLine": true
                },
                "mqttIp": {
                    "type": "text",
                    "label": "mqttIp",
                    "newLine": true,
                    "disabled": "data.mqttServer"
                },
                "mqttPort": {
                    "type": "text",
                    "label": "mqttPort",
                    "newLine": false
                },
                "mqttUsername": {
                    "type": "text",
                    "label": "mqttUser",
                    "newLine": true
                },
                "mqttPassword": {
                    "type": "password",
                    "label": "mqttPassword",
                    "newLine": false
                },
                "_header": {
                    "type": "header",
                    "label": "Not used",
                    "size": 3,
                    "text": "Not used",
                    "hidden": "true"
                },
                "topic": {
                    "type": "text",
                    "label": "topic",
                    "newLine": true,
                    "hidden": "true"
                },
                "name": {
                    "type": "text",
                    "label": "name",
                    "newLine": false,
                    "hidden": "true"
                },
                "timeout": {
                    "type": "number",
                    "label": "timeout",
                    "newLine": true,
                    "hidden": "true"
                },
                "mediaid": {
                    "type": "text",
                    "label": "mediaid",
                    "newLine": false,
                    "hidden": "true"
                },
                "onlyStartFromSystemConfig": {
                    "type": "checkbox",
                    "label": "onlyStartFromSystemConfig",
                    "default": true,
                    "newLine": true,
                    "hidden": "true"
                },
                "Testconfig2": {
                    "type": "jsonEditor",
                    "label": "Testconfig2",
                    "hidden": "true"
                },
                "logUnknownTokens": {
                    "type": "checkbox",
                    "label": "logUnknownTokens",
                    "default": false,
                    "newLine": true,
                    "hidden": "true"
                },
                "doubleClickTime": {
                    "type": "number",
                    "label": "doubleClickTime",
                    "default": 350,
                    "min": 1,
                    "max": 2000,
                    "newLine": true
                }
            }
        },
        "overview": {
            "type": "panel",
            "label": "overview",
            "items": {
                "panels": {
                    "type": "table",
                    "label": "panels",
                    "uniqueColumns": [
                        "name",
                        "topic"
                    ],
                    "items": [
                        {
                            "type": "text",
                            "attr": "id",
                            "label": "Id",
                            "validator": "data.id",
                            "validatorNoSaveOnError": true,
                            "readOnly": true
                        },
                        {
                            "type": "text",
                            "attr": "name",
                            "label": "panelName",
                            "readOnly": false,
                            "validatorErrorText": "mustBeUnique"
                        },
                        {
                            "type": "text",
                            "attr": "topic",
                            "label": "panelTopic",
                            "readOnly": false,
                            "validatorErrorText": "mustBeUnique"
                        },
                        {
                            "attr": "_RefreshDevices",
                            "type": "sendTo",
                            "label": "Refresh Device",
                            "command": "RefreshDevices",
                            "jsonData": "{\"id\": \"${data.id}\", \"name\": \"${data.name}\", \"topic\": \"${data.topic}\" }",
                            "showProcess": true,
                            "useNative": true,
                            "disabled": "!data.topic || !data.name"
                        }
                    ]
                },
                "pw1": {
                    "type": "password",
                    "label": "Service-Pin (numbers only)",
                    "newLine": true,
                    "validator": "data.pw1.search(/[^0-9]+/g) === -1",
                    "validatorNoSaveOnError": true,
                    "validatorErrorText": "mustBeNumber",
                    "xs": 12,
                    "sm": 8,
                    "md": 6,
                    "lg": 4,
                    "xl": 3
                }
            }
        },
        "pageQR": {
            "type": "panel",
            "label": "+",
            "items": {
                "pageQRselType": {
                    "type": "select",
                    "label": "QR Typ",
                    "options": [
                        {
                            "label": "none",
                            "value": 0
                        },
                        {
                            "label": "Wifi",
                            "value": 1
                        },
                        {
                            "label": "URL",
                            "value": 2
                        }
                    ]
                },
                "pageQRwlantype": {
                    "type": "text",
                    "label": "Verschl√ºssselung",
                    "hidden": "data.pageQRselType !== 1",
                    "newLine": true
                },
                "pageQRssid": {
                    "type": "text",
                    "label": "SSID",
                    "hidden": "data.pageQRselType !== 1"
                },
                "pageQRpwd": {
                    "type": "password",
                    "label": "Password",
                    "hidden": "data.pageQRselType !== 1"
                },
                "pageQRwlanhidden": {
                    "type": "checkbox",
                    "label": "verstecktes Wlan",
                    "hidden": "data.pageQRselType !== 1",
                    "default": false
                },
                "pageQRurl": {
                    "type": "text",
                    "label": "URL",
                    "default": "https://",
                    "hidden": "data.pageQRselType !== 2",
                    "newLine": true
                }
            }
        }
    }
}